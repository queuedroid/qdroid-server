# Database dialect: sqlite, postgres, or mysql
DB_DIALECT=sqlite

# SQLite database file path (used if DB_DIALECT=sqlite)
DB_PATH=qdroid.db

# Database connection parameters (for postgres/mysql)
DB_USER=user
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qdroid
DB_SSLMODE=disable 

# Server port (default 8080)
PORT=8080

# Logging level: DEBUG, INFO, WARN, ERROR, OFF
LOG_LEVEL=INFO

# RabbitMQ setting
RABBITMQ_HTTP_URL=http://localhost:15672
RABBITMQ_AMQP_URL=amqp://guest:guest@localhost:5672

# RabbitMQ management API username and password
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# CORS origins (comma-separated list)
CORS_ORIGINS=
CORS_ALLOWED_METHODS=
CORS_ALLOWED_HEADERS=

# Password settings
PWNED_PASSWORDS_ENABLED=true

# Argon2 password hashing parameters
ARGON2_TIME=1
ARGON2_MEMORY=65536
ARGON2_THREADS=2
ARGON2_KEYLEN=32
ARGON2_SALTLEN=16

# Encryption and hashing settings
ENCRYPTION_KEY=
HASHING_PEPPER=

# JWT 
JWT_SECRET=default_very_secret_key

# Environment setting
ENV=production

# ZeptoMail configuration
ZEPTO_MAIL_API_KEY=
ZEPTO_MAIL_BASE_URL=
ZEPTO_MAIL_FROM_EMAIL=noreply@yourdomain.com
ZEPTO_MAIL_FROM_NAME=Your App Name

# Mock email notifications
MOCK_EMAIL_NOTIFICATIONS=true
