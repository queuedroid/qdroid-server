# Database dialect: sqlite, postgres, or mysql
DB_DIALECT=sqlite

# SQLite database file path (used if DB_DIALECT=sqlite)
DB_PATH=qdroid.db

# Database connection parameters (for postgres/mysql)
DB_USER=user
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qdroid
DB_SSLMODE=disable 

# Server port (default 8080)
PORT=8080

# Logging level: DEBUG, INFO, WARN, ERROR, OFF
LOG_LEVEL=INFO

# RabbitMQ management API base URL (e.g. http://localhost:15672)
RABBITMQ_API_URL=http://localhost:15672

# RabbitMQ management API username and password
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# CORS origins (comma-separated list)
CORS_ORIGINS=

# Argon2 password hashing parameters
ARGON2_TIME=1
ARGON2_MEMORY=65536
ARGON2_THREADS=2
ARGON2_KEYLEN=32
ARGON2_SALTLEN=16

# JWT 
JWT_SECRET=default_very_secret_key
